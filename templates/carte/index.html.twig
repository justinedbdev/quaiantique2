{% extends 'base.html.twig' %}

{% block title %}Carte du restaurant Quai Antique
{% endblock %}

{% block body %}
	<section class="carte py-5">
		<div class="container">
			<div class="row">
				<h1 class="carte-title text-center mb-5">Carte Quai Antique</h1>
				<div class="col-md-2"></div>
				<div class="col-md-8">
					{% for categorie in categories %}
						<h3 class="text-uppercase mb-4 mt-5">{{ categorie.nom }}</h3>
						{% for plat in plats[categorie.nom] %}
							<div>
								<h4>{{ plat.titre }}</h4>
							</div>
							<div class="d-flex justify-content-between">
								<div>
									<p class="fst-italic">{{ plat.description|raw }}</p>
								</div>
								<div>
									<p>{{ (plat.prix /100)|number_format(2) }}â‚¬</p>
								</div>
							</div>
							<hr>
						{% endfor %}
					{% endfor %}
				</div>
				<div class="col-md-2"></div>
			</div>
		</div>
	</section>

{% endblock %}
